<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>be.abalone.controller.Index</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Menu</servlet-name>
    <servlet-class>be.abalone.controller.Menu</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Succes</servlet-name>
    <servlet-class>be.abalone.controller.Succes</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Histo</servlet-name>
    <servlet-class>be.abalone.controller.Histo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Settings</servlet-name>
    <servlet-class>be.abalone.controller.Settings</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Menu</servlet-name>
    <url-pattern>/menu.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Succes</servlet-name>
    <url-pattern>/succes.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Histo</servlet-name>
    <url-pattern>/historique.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Settings</servlet-name>
    <url-pattern>/settings.html</url-pattern>
  </servlet-mapping>
  
